@model IEnumerable<Food_Web.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<div class="swiper-container">
    <div class="swiper-wrapper">
        @foreach (var item in Model)
        {
            <div class="swiper-slide">
                <div class="blog-box">
                    <div class="blog-img back-img"
                         style="background-image: url('../../content/images/blog/@item.image');"></div>
                    <div class="blog-text">
                        <p class="blog-date">@item.Blogday</p>
                        <a href="#" class="h4-title">@item.Blogshort</a>
                        <p>@item.Bloglong</p>
                        <a href="#" class="sec-btn" data-url="@Url.Action("Details", "Blog", new { id = item.Blogid })">Read More</a>

                    </div>
                </div>
            </div>
        }
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
</div>
<script>
    var mySwiper = new Swiper('.swiper-container', {
        slidesPerView: 2,
        spaceBetween: 30,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>

