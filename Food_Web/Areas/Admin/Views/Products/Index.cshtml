@model IEnumerable<Food_Web.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    <button> @Html.ActionLink("Create New", "Create")</button>
   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Categoryname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sortdiscription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Categoryname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <img  src="~/Content/products/@item.image" style="width:80px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sortdiscription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Productid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Productid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Productid })
        </td>
    </tr>
}

</table>
